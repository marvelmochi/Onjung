<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--타이틀-->
    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="30dp"
        android:background="#6CBA4F"
        android:gravity="center"
        android:text="산책 홈"
        android:textColor="#ffffff"
        android:textSize="28sp" />

    <!--상단부(프로필, 일정)-->
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/UserProfile"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/img_user_profile" />

            <TextView
                android:id="@+id/UserId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="UserName" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@drawable/round_border"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/TodayListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#6CBA4F"
                android:gravity="center"
                android:text="오늘의 산책 일정"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Task_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:gravity="center"
                android:text="여의도한강공원 30분 산책" />

            <TextView
                android:id="@+id/Task_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:gravity="center"
                android:text="유미랑 강아지 산책" />

            <TextView
                android:id="@+id/Task_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:gravity="center"
                android:text="일산호수공원산책" />

        </LinearLayout>

    </LinearLayout>

    <!--중앙부(헬스 데이터)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/round_border"
        android:orientation="vertical">

        <!--미니 타이틀-->
        <TextView
            android:id="@+id/HealthTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6CBA4F"
            android:gravity="center"
            android:text="헬스 데이터"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <!--감싸는 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="4">

            <!--걸음 수-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_temp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="6"
                    android:text="걸음 수"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:text="8554보"
                    android:textSize="28sp" />

            </LinearLayout>

            <!--걸은 거리-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_temp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="6"
                    android:text="걸은 거리"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:text="6.54km"
                    android:textSize="28sp" />

            </LinearLayout>

            <!--걸은 시간-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_temp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="6"
                    android:text="걸은 시간"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:text="1:25:07"
                    android:textSize="28sp" />

            </LinearLayout>

            <!--소모 칼로리-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_temp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="6"
                    android:text="소모 칼로리"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:text="348kcal"
                    android:textSize="28sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <!--하단부(버튼 2개)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:onClick="selectbtnClicked"
            android:text="조건에 맞는\n 산책로 추천" />

        <Button
            android:id="@+id/AI_walk_btn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:onClick="preferencebtnClicked"
            android:text="취향을 분석한\n 산책로 추천" />

    </LinearLayout>


</LinearLayout>