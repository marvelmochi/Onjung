<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditUserInfoActivity">

    <!--타이틀
    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="20dp"
        android:background="#6CBA4F"
        android:gravity="center"
        android:text="회원정보 수정"
        android:textColor="#ffffff"
        android:textSize="28sp" />
        -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원정보 수정"
            android:textColor="#ffffff"
            android:textSize="28sp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--인사 멘트-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/edit" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/textview_round"
                    android:padding="10dp"
                    android:text="회원 정보를 수정하시겠어요?"
                    android:textAlignment="center" />


            </LinearLayout>

            <!--감싸는 레이아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <!--사진 변경-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/profile_img"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:textSize="24sp"
                        android:background="@drawable/img_user_profile"/>
                    <!--
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="변경하기"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_deco"/>
                        -->
                </LinearLayout>

                <!--이름-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/round_border"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="   이름"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B1BCBE"/>

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="4" />
                </LinearLayout>

                <!--생년월일-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/round_border"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="생년월일"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B1BCBE"/>

                    <EditText
                        android:id="@+id/birth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:maxLength="8"
                        android:hint=" YYYY/MM/DD"
                        android:autoSizeTextType="uniform"
                        />

                </LinearLayout>

                <!--성별-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/round_border"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="   성별"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B1BCBE"/>

                    <RadioGroup
                        android:id="@+id/genderRG"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_weight="1"
                            android:text="여성"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_weight="1"
                            android:text="남성"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />
                    </RadioGroup>
                </LinearLayout>

                <!--아이디
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/round_border"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="  아이디"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B1BCBE"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="5"
                        android:maxLength="10"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginRight="7dp"
                        android:text="확인" />
                </LinearLayout>-->

                <!--비밀번호-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/round_border"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="비밀번호"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B1BCBE"/>

                    <EditText
                        android:id="@+id/pw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:inputType="textPassword"
                        android:maxLength="20"/>
                </LinearLayout>

                <!--비밀번호 확인-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/round_border"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="비밀번호 확인"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B1BCBE"/>

                    <EditText
                        android:id="@+id/check_pw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:inputType="textPassword"
                        android:maxLength="20"/>

                </LinearLayout>

                <!--수정/취소 버튼-->
                <Button
                    android:onClick="editClicked"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/button_deco"
                    android:text="수정"
                    android:textSize="20sp" />
                <!--
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:text="취소"
                    android:background="@drawable/button_deco"/>
                    -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>