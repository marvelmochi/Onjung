<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:weightSum="10">

    <!--산책 일정에서 경로 다시 보여주는 다이얼로그-->

    <!--타이틀
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6CBA4F"
        android:gravity="center"
        android:padding="5dp"
        android:text="산책 일정 보기"
        android:textColor="#ffffff"
        android:textSize="28sp" />-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="산책 일정 보기"
            android:textColor="#ffffff"
            android:textSize="28sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="10">

        <!--제목-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp"
            android:background="@drawable/round_border"
            android:orientation="horizontal"

            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="  제목"
                android:textSize="20sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#B1BCBE"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="5dp"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/courseText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/textview_round"
            android:layout_margin="10dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/completeBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="산책 완료"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:background="@drawable/button_deco"/>
            <Button
                android:onClick="walkingClicked"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="산책하기"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_deco"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>